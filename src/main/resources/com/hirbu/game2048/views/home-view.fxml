<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.hirbu.game2048.controllers.HomeController"
           styleClass="home"
>
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <padding>
            <Insets top="60"/>
        </padding>
        <Label text="2048" styleClass="title"/>
    </VBox>

    <HBox alignment="CENTER" spacing="20.0" fx:id="buttonWrapper">
        <Button text="Start" styleClass="start" onAction="#switchToGame"/>
        <Button text="Leaderboard" styleClass="leaderboard"/>
    </HBox>

    <VBox alignment="BOTTOM_CENTER" spacing="20.0">
        <padding>
            <Insets bottom="40"/>
        </padding>
        <Label text="by @hirbu" styleClass="copy"/>
    </VBox>
</StackPane>
